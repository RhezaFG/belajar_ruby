<div id="<%= dom_id book %>">
  <figure class="md:flex bg-slate-100 rounded-xl p-8 md:p-0 dark:bg-slate-800">
  <img class="w-24 h-24 md:w-48 md:h-auto md:rounded rounded-full mx-auto" src="<%= book.pic_url%>" alt="" width="384" height="512">
  <div class="flex flex-col justify-between w-full relative overflow-x-auto pt-6 md:p-8 md:rounded text-center md:text-left space-y-4 border-2 border-slate-600">
  <p class="my-5">
    <strong class="block font-medium mb-1">Title:</strong>
    <%= book.title %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Author:</strong>
    <%= book.author %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Publication year:</strong>
    <%= book.publication_year %>
  </p>
  </div>
</div>
