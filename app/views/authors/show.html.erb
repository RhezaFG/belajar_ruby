<div class="mx-auto md:w-2/3 w-full flex mt-20">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

      <%= render @author %>
  <div class="py-6">
    <table class="w-full text-center rtl:text-center text-gray-500 border-2 border-slate-600 dark:text-gray-400">
     <thead class="justify-center items-center border-2 border-slate-600">
       <th scope="row" class="py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
         <td class="font-bold text-black">
         Books
         </td>
       </th>
     </thead>
     <tbody>
      <%@author.books.each do |book|%>
      <tr class="odd:bg-white odd:dark:bg-gray-900 even:bg-gray-50 even:dark:bg-gray-800 border-2 border-slate-600">
        <th scope="row" class="py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
         <td>
          <%= book.title %>
         </td>
        </th>
      </tr>
      <%end%>
     </tbody>
    </table>
  </div>
    
    <%= link_to "Edit this author", edit_author_path(@author), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Back to authors", authors_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to "Destroy this author", @author, method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>
  </div>
</div>
