<div id="<%= dom_id author %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= author.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Phone number:</strong>
    <%= author.phone_number %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Date of birth:</strong>
    <%= author.date_of_birth %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Gender:</strong>
    <%= author.gender %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Address:</strong>
    <%= author.address %>
  </p>

</div>
