<div id="<%= dom_id author %>">
 <figure class="md:flex bg-slate-100 rounded-xl p-8 md:p-0 dark:bg-slate-800">
  <img class="w-24 h-24 md:w-48 md:h-auto md:rounded rounded-full mx-auto" src="/anonymous.jpg" alt="" width="384" height="512">
  <div class="flex flex-col justify-between w-full relative overflow-x-auto pt-6 md:p-8 md:rounded text-center md:text-left space-y-4 border-2 border-slate-600">
    <div class= "flex flex-row justify-between">
        <div>
        Name:           
        </div>
        <div>
        <%= author.name %>
        </div>
    </div>     
    <div class= "flex flex-row justify-between">   
        <div>
        Phone Number:   
        </div>
        <div>
        <%= author.phone_number %>
        </div>
    </div>
    <div class= "flex flex-row justify-between">
        <div>
        Date of birth:
        </div>
        <div>
        <%= author.date_of_birth %>
        </div>
    </div>
    <div class= "flex flex-row justify-between">
        <div>
        Gender:
        </div>
        <div>
        <%= author.gender %>
        </div>
    </div>
    <div class= "flex flex-row justify-between">
        <div>
        Address:
        </div>
        <div>
        <%= author.address %>
        </div>
    </div>
  </div>
</div>
