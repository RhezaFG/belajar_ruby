<%# Link showing page number
  - available local variables
    page:          a page object for "this" page
    url:           url to this page
    current_page:  a page object for the currently displayed page
    total_pages:   total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
-%>
<div class="flex">
<div class="border h-full border-gray-900 flex items-center justify-center grow h-6 w-6  <%= page.current? ? 'bg-blue-900 text-white' : 'bg-white hover:bg-blue-100 text-black'  %>">
  <%= link_to_unless page.current?, page, url, {class:"h-full w-full text-center", remote: remote, rel: page.rel} %>
</div>
</div>
